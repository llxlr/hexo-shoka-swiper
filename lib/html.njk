<h2 class="divider">{{ swiper_title }}</h2>
<div style="height: auto;width: 100%">
  <div class="blog-slider swiper-container-fade swiper-container-horizontal" id="swiper_container">
    <div class="blog-slider__wrp swiper-wrapper" style="transition-duration: 0ms;">
      {% for item in swiper_list %}
      <div class="blog-slider__item swiper-slide pjax" style="width: 750px; opacity: 1; transform: translate3d(0px, 0px, 0px); transition-duration: 0ms;">
        <a class="blog-slider__img" href="{% if item.link %}{{ item.link | safe }}{% else %}{{ item.path | safe }}{% endif %}" rel="external nofollow noreferrer" alt="{{ item.title }}">
          <img width="48" height="48" data-src="{{ item.cover | safe }}" alt="" onerror="this.src={{ error_img | safe }}; this.onerror = null;"/>
        </a>        
        <div class="blog-slider__content">
          <span class="blog-slider__code">{% if timemode === 'updated' %}{{ item.updated | date }}{% else %}{{ item.date | date }}{% endif %}</span>
          <a class="blog-slider__title" href="{% if item.link %}{{ item.link | safe }}{% else %}{{ item.path | safe }}{% endif %}" rel="external nofollow noreferrer" alt="{{ item.title }}">{{ item.title }}</a>
          <div class="blog-slider__text">{{ item.description if item.description else default_descr }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="blog-slider__pagination swiper-pagination-clickable swiper-pagination-bullets"></div>
  </div>
</div>
